{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@my/tsconfig/tsconfig.expo.json",
  "compilerOptions": {
    "baseUrl": "./",
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    },
    "rootDir": "./"
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"],
  "exclude": ["node_modules", "*.config.js"]
}
