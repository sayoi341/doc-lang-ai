{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@my/tsconfig/tsconfig.nextjs.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["./app/*"]
    },
    "rootDir": "./",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["./app/**/*", "./*.js", "./*.ts", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
