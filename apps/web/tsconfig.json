{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@my/tsconfig/tsconfig.nextjs.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "rootDir": "./",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "./src/**/*",
    "./*.js",
    "./*.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
