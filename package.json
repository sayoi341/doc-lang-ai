{
  "name": "doc-lang-ai",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "fmt": "turbo fmt",
    "mobile": "bun run --cwd apps/mobile",
    "web": "bun run --cwd apps/web",
    "api": "bun run --cwd apps/api",
    "eslint": "bun run --cwd packages/eslint",
    "prettier": "bun run --cwd packages/prettier",
    "stylelint": "bun run --cwd packages/stylelint",
    "tsconfig": "bun run --cwd packages/tsconfig"
  },
  "dependencies": {
    "dotenv": "16.0.3"
  },
  "devDependencies": {
    "@types/node": "18.15.3",
    "@types/uuid": "9.0.1",
    "cross-env": "7.0.3",
    "eslint": "8.36.0",
    "lint-staged": "13.2.0",
    "prettier": "2.8.4",
    "husky": "^9.0.10",
    "stylelint": "15.2.0",
    "ts-node": "10.9.1",
    "turbo": "latest",
    "typescript": "^5.1.0"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.0.25",
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/eslint/*"
  ]
}
